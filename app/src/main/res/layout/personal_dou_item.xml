<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@drawable/background_personal_item"
    android:layout_margin="1dp"
    android:layout_width="match_parent"
    android:layout_height="42dip">

    <LinearLayout
        android:id="@+id/dou_linear_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dip"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:src="@drawable/dou1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="学豆"
            android:textSize="15sp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dou_linear_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="120dip"
        android:layout_centerVertical="true"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="230"
            android:textSize="12sp"
            />
        <ImageView
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:src="@drawable/dou"
            />
    </LinearLayout>


    <ImageView
        android:layout_width="20dip"
        android:layout_height="20dip"
        android:src="@drawable/personal_more"
        android:id="@+id/goto_dou"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>