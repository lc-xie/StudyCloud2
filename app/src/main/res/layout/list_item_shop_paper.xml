<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <ImageView
        android:id="@+id/exam_paper_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        android:src="@drawable/not_selected_paper"/>

    <ImageView
        android:id="@+id/subject_paper"
        android:layout_width="40dp"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="210dp"
        android:layout_height="match_parent"
        android:layout_marginStart="5dp">
        <!--title of paper-->
        <TextView
            android:id="@+id/title_paper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:text="asdfasfdfdfsdssda"
            android:textSize="16sp"/>

        <!--price of paper-->
        <TextView
            android:text="4.38"
            android:id="@+id/price_paper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:textColor="#E8D35E"
            android:textSize="16sp"/>
        <ImageView
            android:layout_width="@dimen/dou_wrap"
            android:layout_height="@dimen/dou_wrap"
            android:layout_toEndOf="@+id/price_paper"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:src="@drawable/dou"/>

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <!--amount of paper-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/decrease_paper"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:src="@drawable/decrease_paper"/>

            <TextView
                android:gravity="center"
                android:id="@+id/ammount_paper"
                android:text="0"
                android:textSize="14sp"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="19dp"
                android:background="@drawable/background_ammount_paper_shop"/>

            <ImageView
                android:id="@+id/add_paper"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:src="@drawable/add_paper"/>

        </LinearLayout>
        <!--detail of paper-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="资料详情"
                android:textSize="14sp"
                android:textColor="#33A6C3"
                android:layout_gravity="center_horizontal"
                />
            <ImageView
                android:layout_width="10dp"
                android:layout_height="15dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/detail_paper_shop"
                />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>