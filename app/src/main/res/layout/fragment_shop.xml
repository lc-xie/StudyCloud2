<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#f4f4f4"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:background="#ffffff"
        android:id="@+id/list_view_shop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="2dp"
        android:orientation="vertical"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="60dip">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dip"
                android:text="收货"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/address_school"
                android:gravity="center"
                android:layout_marginStart="6dip"
                android:layout_marginEnd="6dip"
                android:layout_width="100dip"
                android:layout_height="wrap_content"
                android:text="华中科技大学"
                android:background="@drawable/address_shouhuo_1"
                android:textColor="#ffffff"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/address_dormitory"
                android:gravity="center"
                android:layout_marginStart="6dip"
                android:layout_marginEnd="6dip"

                android:layout_width="80dip"
                android:layout_height="wrap_content"
                android:text="韵苑宿舍"
                android:background="@drawable/address_shouhuo_1"
                android:textColor="#ffffff"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/address_dormitory_detail"
                android:gravity="center"
                android:layout_marginStart="6dip"
                android:layout_marginEnd="6dip"
                android:layout_width="120dip"
                android:layout_height="wrap_content"
                android:text="韵苑16栋318"
                android:background="@drawable/address_shouhuo_2"
                android:textColor="#33A6C3"
                android:textSize="12sp"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dip"
                android:layout_marginEnd="5dip"
                android:text="总计:"
                android:textColor="#E8D35E"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/shop_purchase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dip"
                android:layout_marginEnd="5dip"
                android:text="11.23"
                android:textColor="#E8D35E"
                android:textSize="24sp"
                />
            <ImageView
                android:layout_width="30dip"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dip"
                android:layout_marginEnd="5dip"
                android:src="@drawable/dou" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dip"
                android:layout_marginEnd="5dip"
                android:text="+邮费：2"/>

            <ImageView
                android:layout_width="30dip"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dip"
                android:layout_marginEnd="5dip"
                android:src="@drawable/dou" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dip"
                android:layout_marginEnd="5dip"
                android:gravity="center"
                android:text="结算"
                android:textColor="#ffffff"
                android:background="@drawable/background_shop_final_estimate"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>