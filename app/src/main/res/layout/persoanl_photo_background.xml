<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="180dip">



    <ImageView
        android:id="@+id/user_background"
        android:layout_width="match_parent"
        android:src="@drawable/photo3"
        android:scaleType="centerCrop"
        android:layout_height="@dimen/persoal_height_1"
        android:layout_alignParentTop="true"
        android:background="#3333ff"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:layout_alignParentBottom="true"
        android:background="#f4f4f4"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"

        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/user_photo"
            android:layout_gravity="center_horizontal"
            android:layout_width="80dip"
            android:layout_height="80dip"
            app:riv_mutate_background="false"
            android:src="@drawable/bqb"
            android:scaleType="centerCrop"
            app:riv_corner_radius="40dip"
            app:riv_border_width="5dip"
            app:riv_oval="true"
            app:riv_border_color="#FFFFFF"/>

        <TextView
            android:id="@+id/user_name"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="尔康"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/user_self_introdoction"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用一句话介绍你自己"
            android:textSize="@dimen/personal_item_text_2"/>

    </LinearLayout>



</RelativeLayout>