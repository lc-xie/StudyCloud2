<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@drawable/background_personal_item"
    android:layout_margin="1dp"
    android:layout_width="match_parent"
    android:layout_height="@dimen/personal_item_height">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dip"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/exp_icon_image"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:src="@drawable/experience"
            />
        <TextView
            android:id="@+id/exp_text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="经验"
            android:textSize="@dimen/personal_item_text_1"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dou_linear_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="120dip"
        android:layout_centerVertical="true"
        >

        <TextView
            android:id="@+id/experience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1890点"
            android:textSize="@dimen/personal_item_text_2"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:layout_marginStart="240dip"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#F9FA00"
            android:textSize="@dimen/personal_item_text_1"
            android:text="学神"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  "/>
        <ImageView
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:src="@drawable/exp_level"
            />
        <ImageView
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:src="@drawable/exp_level"
            />
        <ImageView
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:src="@drawable/exp_level"
            />
        <ImageView
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:src="@drawable/exp_level"
            />
        <ImageView
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:src="@drawable/exp_level"
            />
    </LinearLayout>

</RelativeLayout>